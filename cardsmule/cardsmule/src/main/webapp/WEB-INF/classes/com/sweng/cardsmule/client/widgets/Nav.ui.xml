<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.navBar{
		  list-style-type: none;
		  margin: 0;
		  padding: 0;
		  overflow: hidden;
		  background-color: #303030;
		}
		.list{
			float: left;

		}
		
		li {
			float: left;
		}
		li a {
			display: block;
			color: black;
			text-align: center;
			padding: 18px 20px;
			text-decoration: none;
			font-family: 'Poppins', sans-serif;
		}
		li a:hover::after {
			background-color: black;
		}
		.button {
		}
	</ui:style>

	<g:HTMLPanel>
		<div>
			<ul class="{style.navBar}" id="navbar">
				<li class="{style.list}" id="Home">
					<g:Button styleName="{style.button}" ui:field="btnHome" text="Home"/>
				</li>
				<li class="{style.list}" id="Deck">
					<g:Button styleName="{style.button}" ui:field="btnDeck" text="Deck"/>
				</li>
				<li class="{style.list}" id="Trade">
					<g:Button styleName="{style.button}" ui:field="btnTrade" text="Trade"/>
				</li>
				<li class="{style.list}" id="Login">
					<g:Button styleName="{style.button}" ui:field="btnLogout" text="Logout"/>
				</li>
			</ul>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
