<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .grade {
            font-size: 1.1em;
        }
    </ui:style>
    <g:ListBox styleName="{style.grade}" ui:field='grade'>
        <g:item value="1">Poor</g:item>
        <g:item value="2">Near Mint</g:item>
        <g:item value="3">Mint</g:item>
        <g:item value="4">Good</g:item>
        <g:item value="5">Excellent</g:item>
    </g:ListBox>
</ui:UiBinder>