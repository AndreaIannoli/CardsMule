<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt = 'urn:import:com.google.gwt.user.client.ui'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	*{
		font-family: 'Poppins', sans-serif;
		font-family: 'Skranji', cursive;
	}
	.listAuth {
		list-style-type: none;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-flow: column;
		padding-left: 0;
		
	}
	
	.authButtons {
		background: black;
		border-radius: 25px;
		color: white;
		margin-top: 10px;
		margin-bottom: 10px;
		font-size: 22px;
		padding: 5px 10px;
	}
	
	.authButtons:hover {
		opacity: 80%;
		cursor: pointer;
	}
	
	.authButtonsContainer {
		background: white;
		border-radius: 25px;
		width: 33%;
		padding-top: 20px;
		padding-bottom: 20px;
	}
	
	.wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 80vh;
	}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.wrapper}">
		<div class="{style.authButtonsContainer}">
			<ul class="{style.listAuth}">
		    	<li  id="Login">
		    		<g:Button ui:field = "btnLogin" text="Login" styleName="{style.authButtons}"/>
	        	</li>
	        	<li  id="Register">
		    		<g:Button ui:field = "btnRegister" text="Registrati" styleName="{style.authButtons}"/>
	        	</li>
		    </ul>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 