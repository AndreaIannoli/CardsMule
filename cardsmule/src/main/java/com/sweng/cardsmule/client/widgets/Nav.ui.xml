<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt = 'urn:import:com.google.gwt.user.client.ui'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.navBar{
		  list-style-type: none;
		  margin: 0;
		  padding: 0;
		  overflow: hidden;
		  background-color: #303030;
		}
		.list{
			float: left;
	
		}
		
		
		li {
			float: left;
		}
		
		li a {
			display: block;
			color: black;
			text-align: center;
			padding: 18px 20px;
			text-decoration: none;
			font-family: 'Poppins', sans-serif;
		}
		
		li a:hover::after{
		  background-color: black;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<ul class="{style.navBar}" id="navbar">
	    	<li class="{style.list}" id="Home">
	    		<g:Button ui:field = "btnHome" text="Home"/>
	    	</li>
	    	<li class="{style.list}"  id="Deck">
	    		<g:Button ui:field = "btnDeck" text="Deck"/>
	    	</li>
	    	<li class="{style.list}" id="Login">
	    		<g:Button ui:field = "btnLogin" text="Login"/>
        	</li>
        	<li class="{style.list}" id="Register">
	    		<g:Button ui:field = "btnRegister" text="Registrati"/>
        	</li>
	    </ul>
	</g:HTMLPanel>
</ui:UiBinder> 